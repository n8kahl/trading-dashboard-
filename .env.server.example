# --- Server environment (copy to .env.server on the VM) ---

# Core API keys
POLYGON_API_KEY=pk_your_polygon_key
# One of TRADIER_ACCESS_TOKEN or TRADIER_API_KEY
TRADIER_ACCESS_TOKEN=
TRADIER_API_KEY=
TRADIER_ENV=sandbox

# Optional AI provider
CHATDATA_API_KEY=
CHATDATA_BASE_URL=https://api.chat-data.com
CHATDATA_API_PATH=/v1/chat/completions
CHATDATA_MODEL=

# Optional risk/loops
ENABLE_BACKGROUND_LOOPS=0
ENABLE_ALERTS_POLLER=0
WS_PING_SEC=20

# DB credentials (used by docker-compose Postgres)
POSTGRES_USER=trader
POSTGRES_PASSWORD=change-me
POSTGRES_DB=trader
DATABASE_URL=postgresql+asyncpg://trader:change-me@db:5432/trader

# Grafana admin (change in production)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# Optional: rate limits
POLYGON_API_RATE=5
TRADIER_API_RATE=3

# Optional: alerts + public base for generated chart links
DISCORD_WEBHOOK_URL=
PUBLIC_BASE_URL=
